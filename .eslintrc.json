{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "codeceptjs/codeceptjs": true,
    "jasmine": true
  },
  "extends": [
    "airbnb-base",
    "eslint:recommended",
    "plugin:codeceptjs/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "node_modules",
    "dist/*"
  ],
  "rules": {
    "import/no-extraneous-dependencies": 0,
    "no-console": 0,
    "no-underscore-dangle": 0,
    "no-restricted-globals": 0,
    "linebreak-style": 0,
    "no-prototype-builtins": 0,
    "consistent-return": 0,
    "class-methods-use-this": 0,
    "no-new": 0,
    "quotes": [
      "error",
      "single"
    ]
  },
  "plugins": [
    "codeceptjs",
    "jasmine"
  ]
}